@using TimeSlice.WebApp.Components.Themes
@inherits LayoutComponentBase

<MyMudThemeProvider/>
<MyMudProviders />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">TimeSlice</MudText>
        <MudSpacer />        
        <AuthorizeView>
            <NotAuthorized>
                <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" Href="login"/>
            </NotAuthorized>
            <Authorized>
                <MudButtonGroup Color="Color.Tertiary" Variant="Variant.Filled">
                    <MudIconButton Icon="@Icons.Material.Filled.Today" Color="Color.Inherit" Href="daily" />
                    <MudIconButton Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Href="weather" />
                </MudButtonGroup>
                <MudSpacer />
                <MudText>Hello, @context.User.Identity?.Name!</MudText> 
                <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Href="logout" />
                @* <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" /> *@
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraSmall">
            <MudGrid Justify="Justify.Center" Class="my-4 pt-4">
                <MudItem>
                    @Body
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>