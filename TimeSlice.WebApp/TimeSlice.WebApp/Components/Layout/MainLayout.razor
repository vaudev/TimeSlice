@using TimeSlice.WebApp.Components.Themes
@inherits LayoutComponentBase

<MyMudThemeProvider />
<MyMudProviders />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">TimeSlice</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/"/>
        <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Href="counter" />
        <MudIconButton Icon="@Icons.Material.Filled.List" Color="Color.Inherit" Href="weather" />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraSmall">
            <MudGrid Class="my-4 pt-4">
                <MudItem>
                    @Body
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>